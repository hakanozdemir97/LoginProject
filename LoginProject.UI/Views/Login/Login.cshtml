@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@model LoginProject.Entities.Concrete.User

<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<html>
<head>
    <link href="~/css/Style.css" rel="stylesheet" />

</head>
<body>

    <div class="login-page">
        <div class="form">
            <form asp-action="Login" asp-controller="Login" method="post" class="login-form">

                <input type="text" asp-for="Username" placeholder="Kullanıcı Adı" />
                <span asp-validation-for="Username" class="text-danger"></span>

                <input type="password" asp-for="Password" placeholder="Şifre" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <button type="submit">Giriş Yap</button>

            </form>
        </div>
    </div>

</body>
</html>