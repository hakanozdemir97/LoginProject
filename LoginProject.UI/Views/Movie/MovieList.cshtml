@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@model ICollection<LoginProject.Entities.Concrete.Movie>
@*@model LoginProject.Entities.Concrete.Movie*@

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>MovieHunter</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/moviehunter/css/style.css" rel="stylesheet" />
    <script src="~/moviehunter/js/jquery-1.4.2.min.js"></script>
    <script src="~/moviehunter/js/jquery-func.js"></script>
    <link href="~/moviehunter/css/ie6.css" rel="stylesheet" />
</head>
<body>
    <!-- START PAGE SOURCE -->
    <div id="shell">
        <div id="header">
            <h1 id="logo"><a href="#">MovieHunter</a></h1>

            <div id="navigation">
                <ul>
                    <li><a class="active" href="#">HOME</a></li>
                    <li><a href="#">LOGIN</a></li>
                </ul>
            </div>
            <div id="sub-navigation">
                <ul>
                    <li><a asp-action="MovieList" asp-controller="Movie">SHOW ALL</a></li>
                </ul>
                <div id="search">
                    <form asp-action="SearchByFilter" asp-controller="Movie" method="post" accept-charset="utf-8">
                        <label for="search-field">SEARCH</label>
                        <input type="text" name="search field" value="İsme göre ara" id="search-field" class="blink search-field" />
                        <input type="submit" value="GO!" class="search-button" />
                    </form>
                </div>
            </div>
        </div>

        <div id="main">
            <div id="content">



                <div class="box">
                    <div class="movie">
                        @foreach (var item in Model)
                        {
                            <div class="movie-image"> <span class="play"><span class="name">@item.MovieName</span></span> <a href="#"><img src="@item.Poster" alt="" /></a> </div>
                            <div class="rating">
                                <p>RATING: @item.Imdb</p>
                                <div class="stars">
                                    <div class="stars-in"></div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="cl">&nbsp;</div>

                </div>

            </div>
        </div>

    </div>


    <div id="footer">
        <p class="lf">Copyright &copy; 2010 <a href="#">SiteName</a> - All Rights Reserved</p>
        <p class="rf">Design by <a href="http://chocotemplates.com/">ChocoTemplates.com</a></p>
        <div style="clear:both;"></div>
    </div>
    </div>
    <!-- END PAGE SOURCE -->
</body>
</html>